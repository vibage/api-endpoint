{
  "name": "fizzle-server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:dev": "npm run build && npm-run-all --parallel watch:server watch:build",
    "build": "tsc",
    "watch:server": "nodemon dist/server.js | bunyan -o short",
    "watch:build": "tsc -w",
    "test": "jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/*.+(ts|tsx|js)"
    ],
    "testEnvironment": "node"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "bunyan": "^1.8.12",
    "express": "^4.16.4",
    "jest": "^24.1.0",
    "mongoose": "^5.4.15",
    "node-fetch": "^2.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/bunyan": "^1.8.5",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.9",
    "@types/mongodb": "^3.1.19",
    "@types/mongoose": "^5.3.19",
    "@types/node-fetch": "^2.1.6",
    "@types/supertest": "^2.0.7",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "supertest": "^3.4.2",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3333"
  }
}